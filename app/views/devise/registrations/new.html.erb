<%=render "shared/second_header"%>
<div class="registration-main">
  <div class="registration-form">

    <h1 class="from-message">新規登録</h1>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render 'shared/error_message', model: f.object %>

      <div class="form-group">
        <div class="from-text-wrap">
          <label class="form-text">ユーザーネーム</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.text_area :name, class:"input-default", id:"name", placeholder:"name", maxlength:"40" %>
      </div>

      <div class="form-group">
        <div class="from-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"aaa@aaa", autofocus: true %>
      </div>

      <div class="form-group">
        <div class="from-text-wrap">
          <label class="form-text">パスワード</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="form-group">
        <div class="from-text-wrap">
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>

      <div class='register-btn-wrap'>
        <%= f.submit "会員登録" ,class:"register-btn" %>
      </div>

    <% end %>
  </div>
</div>