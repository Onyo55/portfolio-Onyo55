<%= render "shared/header" %>
<div class="session-main">
  <h1 class="sign-up-text">ログイン</h1>

  <%= form_with model: @user,url: user_session_path, class: 'session-form', local: true do |f| %>
    <%= render 'shared/error_message', model: f.object %>
    <div class="form-group">
        <div class="from-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"aaa@aaa", autofocus: true %>
      </div>

      <div class="form-group">
        <div class="from-text-wrap">
          <label class="form-text">パスワード</label>
          <span class="indispensable">※必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class='session-btn-wrap'>
        <%= f.submit "ログイン" ,class:"session-btn" %>
      </div>

  <% end %>
</div>